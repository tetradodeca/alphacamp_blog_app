<table>
    <thead>
        <th> Title </th>
        <th> Author </th>
    </thead>


    <tbody>

    <% @posts.each do |post| %>

        <tr>
            <td>
                <%= post.title %>
            </td>
            
            <td>
                <%= post.author %>
            </td>

            <td>
                <%= link_to 'view', post_path(id: post.id) %>
            </td>

            <td>
                <%= link_to "delete", post_path(id: post.id) , method: :delete, data: { confirm: "Are you sure?" }  %>
            </td>
        </tr>

     <% end %>

    </tbody>

</table>

<%= link_to 'Create New Post', new_post_path %>